---
type Props = {
  label: string;
  id: string;
  placeholder?: string;
};

const { id, label, placeholder = "" } = Astro.props;
---

<div class="w-full">
  <div class="relative">
    <label for="name" class="leading-7 text-sm custom-normal-gray"
      >{label}</label
    >
    <textarea
      id={id}
      name={id}
      placeholder={placeholder}
      class:list={[
        "text-gray-700 border-slate-300 hover:border-slate-500/60 hover:shadow focus:border-slate-500/70",
        "dark:text-white dark:bg-gray-100/10 dark:border-gray-300/20",
      ]}
      class="w-full rounded border text-base outline-none py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
    ></textarea>
  </div>
</div>
