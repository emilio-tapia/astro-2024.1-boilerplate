---
import { clsxm } from "@/utils/styles/tw";

type Props = {
  className?: string;
  type: "bold" | "xbold";
};

const { className = "", type } = Astro.props;
---

{
  type === "xbold" && (
    <h3
      class="text-3xl tracking-tight leading-tight text-gray-900 dark:text-white md:text-4xl"
      class:list={clsxm([className, "font-extrabold"])}
    >
      <slot />
    </h3>
  )
}

{
  type === "bold" && (
    <h3
      class="text-3xl tracking-tight leading-tight text-gray-900 dark:text-white md:text-4xl"
      class:list={clsxm([className, "font-bold"])}
    >
      <slot />
    </h3>
  )
}
